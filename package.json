{
	"name": "stylelint-gamut",
	"version": "1.3.4",
	"description": "Stylelint plugin for working with different color spaces",
	"type": "module",
	"exports": "./src/index.js",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint --fix **/*.js",
		"test": "node --test",
		"prepare": "git config --local core.hooksPath .githooks || true"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write"
		],
		"!(*.js)": "prettier --write"
	},
	"engines": {
		"node": ">=20.19.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fpetrakov/stylelint-gamut.git"
	},
	"files": [
		"src/**/*.js",
		"!**/**/*.test.js"
	],
	"keywords": [
		"stylelint",
		"stylelint-plugin",
		"gamut",
		"lch",
		"oklch",
		"lab",
		"oklab"
	],
	"author": "Fedya Petrakov",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/fpetrakov/stylelint-gamut/issues"
	},
	"homepage": "https://github.com/fpetrakov/stylelint-gamut#readme",
	"peerDependencies": {
		"stylelint": "^17.0.0"
	},
	"devDependencies": {
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^16.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"lint-staged": "^16.2.7",
		"prettier": "^3.0.3",
		"stylelint": "^17.0.0",
		"stylelint-test-rule-node": "^1.0.0"
	},
	"dependencies": {
		"colorjs.io": "^0.6.1"
	}
}
