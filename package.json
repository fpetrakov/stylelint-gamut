{
	"name": "stylelint-gamut",
	"version": "2.0.0",
	"description": "Stylelint plugin for working with different color spaces",
	"type": "module",
	"main": "src/index.js",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint --fix *.js",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.js": "eslint --fix",
		".": "prettier -write"
	},
	"engines": {
		"node": ">=20.19.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fpetrakov/stylelint-gamut.git"
	},
	"files": [
		"src/**/*.js",
		"!**/**/*.test.js"
	],
	"keywords": [
		"stylelint",
		"stylelint-plugin",
		"gamut",
		"lch",
		"oklch",
		"lab",
		"oklab"
	],
	"author": "Fedya Petrakov",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/fpetrakov/stylelint-gamut/issues"
	},
	"homepage": "https://github.com/fpetrakov/stylelint-gamut#readme",
	"peerDependencies": {
		"stylelint": "^14.0.0 || ^15.0.0 || ^16.0.0 || ^17.0.0"
	},
	"devDependencies": {
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^16.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^8.0.3",
		"jest": "^30.0.0",
		"jest-cli": "^30.0.0",
		"jest-preset-stylelint": "^9.0.0",
		"lint-staged": "^15.0.2",
		"prettier": "^3.0.3",
		"stylelint": "^17.0.0"
	},
	"dependencies": {
		"colorjs.io": "^0.4.5"
	}
}
